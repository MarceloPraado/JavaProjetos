import java.util.Scanner;

public class Estruturas {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int n1, n2, n3, n4, n5, n6, m1, m2, sm;
		double mm;
		Scanner teclado;
		
		n1 = 8;
		n2 = 9;
		n3 = 7;
		n4 = 4;
		n5 = 5;
		n6 = 6;
		m1 = (n1 + n2 + n3)/3 ;
		m2 = (n4 + n5 + n6)/3;
		sm = (m1 + m2);
		mm = sm/2;
		
		System.out.println("A média aritmética dos números 8,9 e 7 é: " + m1);
		System.out.println("A média aritmética dos números 4,5 e 6 é: " + m2);
		System.out.println("A soma das duas médias é: " + sm);
		System.out.println("A média das médias é: " + mm);
		
		
		
	}

}
